<Window x:Class="Ex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Button x:Name="StartNotepadButton" Content="Запустить Notepad" 
                Click="StartNotepadButton_Click" Height="30" Margin="0,0,0,10"/>
            <TextBlock x:Name="StatusText" Text="Статус: Ожидание действий..." 
                   Margin="0,0,0,10" FontSize="14"/>
            <TextBlock x:Name="ThreadInfoText" Text="Текущий поток: главный (UI)" 
                   Margin="0,0,0,10" FontSize="12"/>
            <TextBlock x:Name="OutputText" Text="Результат:" 
                   Margin="0,0,0,10" FontSize="12"/>
        </StackPanel>
    </Grid>
</Window>
